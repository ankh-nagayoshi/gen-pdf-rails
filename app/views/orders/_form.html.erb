<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :total_price %><br>
    <%= f.number_field :total_price %>
  </div>
  <div class="field">
    <%= f.label :customer %><br>
    <%= f.text_field :customer %>
  </div>
  <div class="field">
    <%= f.label :order_products, :order_products %><br />
    <%= f.fields_for :order_products do |order_product_form| %>
      <%= render "order_product_field", f: order_product_form %>
    <% end %>
    <%= link_to_add_fields "Add Product", f, :order_products %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
